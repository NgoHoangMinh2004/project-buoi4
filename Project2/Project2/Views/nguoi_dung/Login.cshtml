@{
    ViewBag.Title = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.Label("Tên đăng nhập")
        @Html.TextBox("ten_dang_nhap")
    </div>
    <div>
        @Html.Label("Mật khẩu")
        @Html.Password("mat_khau")
    </div>
    <button type="submit">Đăng nhập</button>
}

@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red;">@ViewBag.ErrorMessage</div>
}

<!-- Thêm nút "Chưa có tài khoản? Đăng ký ngay" -->
<p>Chưa có tài khoản? <a href="@Url.Action("SignUp", "nguoi_dung")">Đăng ký ngay</a></p>
